    <script>
        let scrollToTopBtn = document.getElementById('scrollToTop');
        
        // Показываем стрелку при прокрутке страницы вниз
        window.onscroll = function() {
            if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                scrollToTopBtn.style.display = "block";
            } else {
                scrollToTopBtn.style.display = "none";
            }
        };
        
        // При клике на стрелку прокручиваем страницу наверх
        scrollToTopBtn.onclick = function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };

        // При загрузке страницы устанавливаем скролл в верхнюю часть
        window.addEventListener("DOMContentLoaded", function () {
            if (window.location.hash) {
                history.replaceState(null, null, ' '); // Убираем якорь из URL
            }
            window.scrollTo(0, 0); // Мгновенный возврат наверх
        });
        
        window.history.scrollRestoration = "manual";
    </script>                                        
